# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.py]
indent_style = space
indent_size = 4

[*.yaml,*.yml,*.json]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4
